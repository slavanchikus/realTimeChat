.container
  display: flex
  flex-wrap: wrap
  align-items: baseline

.item
  display: flex

.preview
  width: 100px
  height: 100px
  margin: 10px 10px 0 0
  object-fit: cover
  cursor: pointer

.delete
  width: 20px
  height: 20px
  flex-shrink: 0
  position: relative
  top: 4px
  right: 24px
  background: white
  text-align: center
  font-size: 13px
  line-height: 21px
  opacity: 0.5
  border-radius: 50%
  cursor: pointer
  &::after
    content: '‚ùå'
    color: black
  &:hover
    opacity: 1
