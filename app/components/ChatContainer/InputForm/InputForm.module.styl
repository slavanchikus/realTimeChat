.container
  max-height: 220px
  padding: 20px 15px 0 15px
  border-top: 1px solid #ffdb4d
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-between

.input
  font-size: 13px
  display: inline-block
  width: 495px
  max-height: 108px
  min-height: 16px
  border: 1px solid hsla(0,0%,100%,.1)
  border-radius: 5px
  outline: 0
  padding: 10px
  overflow-y: scroll
  &::-webkit-scrollbar-track
    background-color: #181818
  &::-webkit-scrollbar
    width: 7px
    background-color: #181818
  &::-webkit-scrollbar-thumb
    border-radius: 10px
    background-color: rgb(163, 162, 162, 0.53)

.post
  display: inline-block
  width: 35px
  height: 35px
  margin-left: 10px
  background: url("../../../img/post.svg") no-repeat
  background-size: contain
  cursor: pointer
  flex-shrink: 0

@media (max-width: 660px)
  .input
    width: 100%

