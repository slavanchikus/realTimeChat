.container
  display: flex
  flex-direction: column
  justify-content: flex-end
  width: 600px
  height: 100%
  box-sizing: border-box
  background: #181818
  border: 1px solid
  border-color: hsla(0,0%,100%,0.15)
  border-radius: 10px

@media (max-width: 660px)
  .container
    width: 100%

