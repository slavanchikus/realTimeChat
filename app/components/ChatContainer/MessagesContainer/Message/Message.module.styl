.message
  display: table
  width: auto
  min-width: 120px
  min-height: 30px
  position: relative
  margin-left: auto
  border: 1px solid
  margin-top: 10px
  padding: 7px
  border-color: rgba(255,255,255,0.10)
  border-radius: 5px
  p
    font-size: 13px
    margin: 2px 0 0 0
    padding-right: 30px
    max-width: 460px
    overflow: hidden
    text-overflow: ellipsis
    white-space: pre-line
  .username
    font-size: 14px
    font-weight: 600
    color: #ECC948

.own_message
  margin-left: 0
  .username
    color: #35a14b

.same_author
  margin-top: 5px

.date
  position: absolute
  right: 4px
  bottom: 4px
  font-size: 11px

.emoji
  background: url('../../../../img/emoji_sheet.png')
  display:inline-block
  width: 16px
  height: 16px
  vertical-align: -4px
  margin: 0 1px 0 1px
  pointer-events: none

@media (max-width: 500px)
  .message
    p
      max-width: 300px