.message
  display: table
  width: auto
  min-width: 90px
  min-height: 30px
  position: relative
  margin-left: 0
  border: 1px solid
  margin-top: 10px
  padding: 7px
  padding-right: 30px
  border-color: rgba(255,255,255,0.10)
  background: #181818
  border-radius: 5px
  p
    font-size: 13px
    margin: 2px 0 0 0
    max-width: 460px
    overflow: hidden
    text-overflow: ellipsis
    white-space: pre-line
  .username
    font-size: 14px
    font-weight: 600
  a
    color: #ECC948
    margin-right: 5px

.own_message
  margin-left: auto

.same_author
  margin-top: 2px
  min-height: 15px

.date
  font-size: 10px
  position: absolute
  bottom: 4px
  right: 4px

.emoji
  background: url('../../../../../img/emoji_sheet.png')
  display:inline-block
  width: 16px
  height: 16px
  vertical-align: -4px
  margin: 0 1px 0 1px
  pointer-events: none

@media (max-width: 500px)
  .message
    p
      max-width: 230px
