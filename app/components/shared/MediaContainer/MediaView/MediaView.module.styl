.overlay
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  background: rgba(0, 0, 0, 0.5)
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px
  position: fixed
  top: 0
  left: 0
  z-index: 100000
  div
    &::-webkit-scrollbar-track
      background-color: transparent !important
    &::-webkit-scrollbar
      background-color: transparent !important
    &::-webkit-scrollbar-thumb
      background-color: transparent !important

.file_wrapper
  width: 95%
  height: 95%
  display: flex
  align-items: center
  justify-content: center
  position: relative
  background-color: #454545
  border-radius: 10px

.view
  width: inherit
  height: inherit
  padding: 20px
  object-fit: scale-down
  cursor: pointer

.delete
  width: 30px
  height: 30px
  flex-shrink: 0
  position: absolute
  top: 24px
  right: 24px
  background: #fff
  text-align: center
  font-size: 21px
  line-height: 32px
  opacity: .5
  border-radius: 50%
  cursor: pointer
  &::after
    content: '‚ùå'
    color: black
  &:hover
    opacity: 1

