.container
  display: flex
  justify-content: center
  align-items: center
  position: absolute
  width: 100%
  height: 100%

.wrapper
  display: flex
  flex-direction: column
  background: #0f0f0f
  border-radius: 5px
  border: 1px solid hsla(0,0%,100%,0.15)

.form
  padding: 20px 25px
  p
    margin: 0
    font-size: 14px
  input
    height: 19px
    padding: 4px
    border: 0
    outline: 0
    border-radius: 2px
    margin-bottom: 15px
    margin-top: 5px
    &:last-child
      margin-bottom: 0

.button
  height: 35px
  text-align: center
  line-height: 35px
  font-size: 15px
  font-weight: 600
  background: #ffdb4d
  border-color: rgba(191,153,0,.8)
  color: black
  cursor: pointer
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px
  transition-duration: .2s;
  &:hover
    background: #ECC948
