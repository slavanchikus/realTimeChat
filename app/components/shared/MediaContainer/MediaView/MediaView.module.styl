.overlay
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  background: rgba(0, 0, 0, 0.5)
  border-bottom-left-radius: 5px
  border-bottom-right-radius: 5px
  position: fixed
  top: 0
  left: 0
  z-index: 100000
  div
    &::-webkit-scrollbar-track
      background-color: transparent !important
    &::-webkit-scrollbar
      background-color: transparent !important
    &::-webkit-scrollbar-thumb
      background-color: transparent !important

.file_wrapper
  width: 80%
  height: 80%
  display: flex
  align-items: center
  justify-content: center
  background-color: #454545
  border-radius: 10px

.view
  width: inherit
  height: inherit
  padding: 20px
  object-fit: contain
  cursor: pointer
